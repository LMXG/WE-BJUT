page{
    background: white;
}

swiper{
  height: 350rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
}
.slide-image{
  margin: 20rpx;
  width: 95%;
  height: 90%;
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
  border-radius: 20rpx;
  display: block;
}
.slide-text{
  left: 0;
  right: 0;
  bottom: 0;
  height: auto;
  white-space: pre-wrap;
  margin-bottom: 20rpx;
  color: white;
  position: absolute;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background: rgba(172, 170, 170, 0.5);
  border-radius: 15rpx;
  display: inline-block;
  line-height: 40rpx;
  padding-top: 7rpx;
  padding-bottom: 7rpx;
}
.slide-text text{
  font-size: 30rpx;
  font-weight: 580;
  margin-left: 40rpx;
}

.timetable{
  height: auto;
  margin: 25rpx;
  padding: 10px;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4rpx 16rpx 0px rgba(140, 160, 181, 0.2);
  border-radius: 12rpx;
  position: relative;
}

.timetable-title{
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-bottom: 5rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.timetable-title text{
    font-size: 26rpx;
}

.timetable-line{
  width: 650rpx;
  position: relative;
  left: 50%;
  margin-left: -325rpx;
  background-color: #e5e5e5;
  height: 1rpx;
}

.timetable-content{
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 30rpx;
  margin-bottom: 5rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.timetable-time{
  color: #3683d6;
  font-size: 32rpx;
  font-weight: 600;
}
.timetable-right{
  margin-left: 45rpx;
}
.timetable-class{
  font-size: 30rpx;
  font-weight: 600;
  white-space: pre-wrap;
  display: flex;
  flex-direction: row;
}
.timetable-location{
  font-size: 26rpx;
  color: #adadad;
  right: 0;
  display: flex;
  flex-direction: row-reverse;
}

.nav-list{
  display: flex;
  flex-wrap: wrap;
  padding-top: 10rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 0rpx;
  justify-content: space-between;
}

.nav-li {
  padding: 30rpx;
  border-radius: 12rpx;
  width: 35%;
  height: auto;
  margin: 0 2.5% 40rpx;
  background: linear-gradient(to bottom right,#3FAED2, #79C6E0);
  background-size: cover;
  background-position: center;
  position: relative;
  z-index: 1;
  display: inline-block;
  white-space: nowrap;
  align-items: center;
  overflow: hidden;
  box-shadow:0 8rpx 10rpx 2rpx #94cafc99;/*for Android*/
  -webkit-box-shadow:0px 4px 5px 1px #94cafc99;/*for IOS*/
}

.nav-li::after {
  content: "";
  position: absolute;
  z-index: -1;
  background-color: inherit;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: -10%;
  border-radius: 10rpx;
  opacity: 0.2;
  transform: scale(0.9, 0.9);
}

.nav-title {
  font-size: 32rpx;
  font-weight: 300;
  color: white;
}

.nav-title::first-letter {
  font-size: 40rpx;
  margin-right: 4rpx;
}

.nav-name {
  font-size: 28rpx;
  text-transform: Capitalize;
  margin-top: 20rpx;
  position: relative;
  color: white;
}

.nav-name::before {
  content: "";
  position: absolute;
  display: block;
  width: 40rpx;
  height: 6rpx;
  background: #fff;
  bottom: 0;
  right: 0;
  opacity: 0.5;
}

.nav-name::after {
  content: "";
  position: absolute;
  display: block;
  width: 100rpx;
  height: 1px;
  background: #fff;
  bottom: 0;
  right: 40rpx;
  opacity: 0.3;
}

.nav-name::first-letter {
  font-weight: bold;
  font-size: 36rpx;
  margin-right: 1px;
}

.nav-li text {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 52rpx;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}

.text-light {
  font-weight: 300;
}

.border-line{
  width: 100%;
  height: 1rpx;
  background: #eee;
}

.nav {
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  background: #fff;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  margin-bottom: 0rpx;
  min-height: 180rpx;
  overflow: hidden;
}
.item {
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 25%;
  height: 160rpx;
}
.item image {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx auto;
}
.item text{
  font-size: 28rpx;
  display: block;
  margin: 1rpx;
  text-align: center;
}






